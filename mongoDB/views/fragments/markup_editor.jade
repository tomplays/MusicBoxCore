img(ng-if="markup.type=='img'" , data-tdid="{{markup.id}}" , ng-src="{{markup.metadata}}")
p(ng-if="markup.type=='note'") {{markup.metadata}}
p {{markup.start}} - {{markup.end}} - {{markup.metadata}} - {{markup.type}} - {{markup.subtype}}
a(href="", ng-if="markup.selected == false ", ng-click="toggle_select_markup(markup,true)") select 
a(href="", ng-if="markup.selected == true ", ng-click="toggle_select_markup(markup,false)") unselect 

div(ng-if="markup.selected == true ")
	a(ng-click="delete_markup(markup)") delete markup
	a(ng-click="offset_markup(markup)") offset markup start/end/+3
	p type 
		input(ng-model="markup.type" ,type="text")
	p subtype
		input(ng-model="markup.subtype" ,type="text")
	p position
		input(ng-model="markup.position" ,type="text")
	p start
		input(ng-model="markup.start" ,type="text")
	p end
		input(ng-model="markup.end", type="text")
	p metadata
		input(ng-model="markup.metadata", type="text")
	p status
		input(ng-model="markup.status" ,type="text")
	p depth
		input(ng-model="markup.depth" type="text" )
	a.btn(ng-click="markup_save(markup)") ok